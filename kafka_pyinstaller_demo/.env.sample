
# Bootstrap servers (comma-separated host:port)
KAFKA_BOOTSTRAP=localhost:9092
# Topic name to use
KAFKA_TOPIC=demo-python-topic
# Consumer group id (any string)
KAFKA_GROUP_ID=demo-python-group
# Optional: number of messages producer will send
PRODUCER_COUNT=10

# --- Optional security settings (uncomment & set if needed) ---
# KAFKA_SECURITY_PROTOCOL=SASL_PLAINTEXT   # or SASL_SSL
# KAFKA_SASL_MECHANISM=SCRAM-SHA-256      # or PLAIN, SCRAM-SHA-512, etc.
# KAFKA_SASL_USERNAME=your_user
# KAFKA_SASL_PASSWORD=your_password
# KAFKA_SSL_CAFILE=/path/to/ca.pem
# KAFKA_SSL_CERTFILE=/path/to/cert.pem
# KAFKA_SSL_KEYFILE=/path/to/key.pem
